            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginRight="@dimen/pad_5dp"
            android:layout_marginTop="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/textView1"
                style="@style/lbl_gray14_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Popular Videos" />

            <Button
                android:id="@+id/btnUpload"
                style="@style/lbl_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload a Video" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_margin="@dimen/pad_5dp"
            android:background="@color/gray_light" />
