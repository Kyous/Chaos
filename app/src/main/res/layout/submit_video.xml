<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >



        <LinearLayout
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_5dp"
                android:layout_marginRight="@dimen/pad_5dp"
                android:layout_marginTop="@dimen/pad_10dp" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/lbl_gray14_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Submit a new Video" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/categoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area"

                android:padding="0dp" >

                <Spinner
                    android:id="@+id/categoryType"
                    android:textSize="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category"
                    android:layout_margin="5.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryLayout"
                android:padding="3dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/subCategoryType"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_margin="5.0dip" />

                    <EditText
                        android:id="@+id/edTitle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Specify the title"
                        android:padding="10dp"
                        android:textSize="12dp"
                        android:textColorHint="#000" />

                    <EditText
                        android:id="@+id/edFeaturedNames"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Specify the names tags of those featuring"
                        android:padding="10dp"
                        android:textSize="12dp"
                        android:textColorHint="#000" />

                    <EditText
                        android:id="@+id/edTags"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Specify the video tags e.g. #politics #protest"
                        android:padding="10dp"
                        android:textSize="12dp"
                        android:textColorHint="#000" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/lla"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="1dp" >

                        <EditText
                            android:id="@+id/edLocation"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"

                            android:ems="10"
                            android:hint="Specify the geographical location"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColorHint="#000"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/edDescription"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"

                            android:ems="10"
                            android:hint="Specify the summary of events"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColorHint="#000"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/edDuration"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"

                            android:ems="10"
                            android:hint="Specify the duration e.g. 1:59"
                            android:inputType="time"
                            android:padding="10dp"
                            android:textColorHint="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btnAttach"
                            style="@style/lbl_see_all"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:drawableLeft="@drawable/attach_icon"
                            android:text="Attach Video"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="1dp"
                        >

                        <Button
                            android:id="@+id/btnSubmit"
                            style="@style/lbl_see_all"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"

                            android:text="Submit"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>